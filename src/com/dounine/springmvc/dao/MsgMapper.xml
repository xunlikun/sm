<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dounine.springmvc.dao.MsgMapper">
    <!-- sp namespace:映射StudentMapper的接口 -->
    
    <!-- 添加一条数据 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into Msg(sendto,content) values(#{sendto},#{content})
    </insert>
    
    <!-- 删除一条数据 -->
    <delete id="delete">
        delete from Msg where id=#{id}
    </delete>
    
    <!-- 获取一条数据 -->
    <select id="get" resultType="com.dounine.springmvc.entity.Msg">
        select id,sendto,content from Msg where id=#{id}
    </select>
    
</mapper>